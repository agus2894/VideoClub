<Page x:Class="VideoClubWPF.ListarPeliculasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Listar Películas" Height="291" Width="770">
    <Grid Margin="10">
        <TextBlock Text="Listado de Películas" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- DataGrid para mostrar las películas -->
        <DataGrid Name="PeliculasDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,40,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Título" Binding="{Binding Titulo}" Width="*"/>
                <DataGridTextColumn Header="Actor Principal" Binding="{Binding ActorPrincipal}" Width="*"/>
                <DataGridTextColumn Header="Director" Binding="{Binding Director}" Width="*"/>
                <DataGridTextColumn Header="Género" Binding="{Binding Genero}" Width="*"/>
                <DataGridTextColumn Header="Duración (min)" Binding="{Binding Duracion}" Width="*"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding CantidadStock}" Width="*"/>
                <DataGridTextColumn Header="Precio Alquiler" Binding="{Binding PrecioAlquiler}" Width="*"/>
                <DataGridTextColumn Header="Fecha de Ingreso" Binding="{Binding FechaIngreso}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
