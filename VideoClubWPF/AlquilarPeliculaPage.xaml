<Page x:Class="VideoClubWPF.AlquilarPeliculaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Alquilar Película">
    <Grid Margin="10">
        <TextBlock Text="Alquilar Película" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Text="Título de la Película:" Margin="0,40,0,5"/>
        <TextBox Name="TituloTextBox" Width="300" Margin="0,5,0,0"/>

        <Button Content="Alquilar" Width="100" Height="30" Margin="0,40,0,0" Click="AlquilarButton_Click"/>

        <TextBlock Name="ResultadoTextBlock" Margin="0,80,0,0" FontWeight="Bold" Foreground="Green"/>
    </Grid>
</Page>
