<Window x:Class="VideoCluWPF.AgregarPelicula"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Serie" Height="400" Width="300">
    <StackPanel Margin="20">
        <Label>Título:</Label>
        <TextBox x:Name="TituloTextBox" />

        <Label>Actor Principal:</Label>
        <TextBox x:Name="ActorPrincipalTextBox" />

        <Label>Director:</Label>
        <TextBox x:Name="DirectorTextBox" />

        <Label>Género:</Label>
        <TextBox x:Name="GeneroTextBox" />

        <Label>Duración (min):</Label>
        <TextBox x:Name="DuracionTextBox" />

        <Label>Cantidad Stock:</Label>
        <TextBox x:Name="StockTextBox" />

        <Label>Precio Alquiler:</Label>
        <TextBox x:Name="PrecioTextBox" />

        <Label>Fecha de Ingreso:</Label>
        <DatePicker x:Name="FechaIngresoPicker" />

        <Label>Número de Episodios:</Label>
        <TextBox x:Name="EpisodiosTextBox" />

    </StackPanel>
</Window>
