<Page x:Class="VideoClubWPF.DevolverPelicula"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Devolver Película">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Selecciona una película para devolver:" FontWeight="Bold" Margin="0,0,0,10"/>
            <ComboBox x:Name="PeliculasComboBox" Width="300" Height="30" />
            <Button Content="Devolver" Width="100" Height="30" Margin="0,10,0,0" Click="DevolverButton_Click" />
        </StackPanel>
    </Grid>
</Page>
