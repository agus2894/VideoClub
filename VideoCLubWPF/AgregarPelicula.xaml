<Window x:Class="VideoClubWPF.AgregarPelicula"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Película" Height="400" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Agregar Película" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <Label>Título:</Label>
        <TextBox x:Name="TituloTextBox" />

        <Label>Actor Principal:</Label>
        <TextBox x:Name="ActorPrincipalTextBox" />

        <Label>Director:</Label>
        <TextBox x:Name="DirectorTextBox" />

        <Label>Género:</Label>
        <TextBox x:Name="GeneroTextBox" />

        <Button Content="Agregar" Click="Agregar_Click" Margin="0,20,0,0"/>
    </StackPanel>
</Window>
