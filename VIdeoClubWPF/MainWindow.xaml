<Window x:Class="VideoClubWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú Principal" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Opciones">
                <MenuItem Header="Agregar Película" Click="AgregarPelicula_Click"/>
                <MenuItem Header="Listar Películas" Click="ListarPelicula_Click"/>
                <MenuItem Header="Agregar Serie" Click="AgregarSerie_Click"/>
                <MenuItem Header="Listar Series" Click="ListarSerie_Click"/>
            </MenuItem>
        </Menu>
        <Frame Name="MainFrame"/>
    </DockPanel>
</Window>
