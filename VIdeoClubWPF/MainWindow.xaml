<Window x:Class="VideoClubApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Club" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Click="ListarPeliculasButton_Click">Listar Películas</Button>
            <Button Click="ListarSeriesButton_Click">Listar Series</Button>
            <Button Click="AlquilarPeliculaButton_Click">Alquilar Película</Button>
            <Button Click="AlquilarSerieButton_Click">Alquilar Serie</Button>
            <Button Click="DevolverPeliculaButton_Click">Devolver Película</Button>
            <Button Click="DevolverSerieButton_Click">Devolver Serie</Button>
            <Button Click="AgregarPeliculaButton_Click">Agregar Película</Button>
            <Button Click="AgregarSerieButton_Click">Agregar Serie</Button>
            <Frame x:Name="MainFrame" />
        </StackPanel>
    </Grid>
</Window>
