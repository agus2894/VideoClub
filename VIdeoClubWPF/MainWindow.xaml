<Window x:Class="VideoClubWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VideoClub" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menú lateral básico -->
        <StackPanel Background="#3E3E3E" Grid.Column="0" VerticalAlignment="Top">
            <Button Content="Página 1" Name="btnPagina1" Margin="10" Click="btnPagina1_Click"/>
            <Button Content="Página 2" Name="btnPagina2" Margin="10" Click="btnPagina2_Click"/>
            <Button Content="Salir" Name="btnSalir" Margin="10" Click="btnSalir_Click"/>
        </StackPanel>

        <!-- Área de contenido para navegar entre páginas -->
        <Frame Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
