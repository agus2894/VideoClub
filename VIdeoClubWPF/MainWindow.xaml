<Window x:Class="VideoClubApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Club" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#f0f0f0">
            <Button Content="Listar Películas" Click="ListarPeliculasButton_Click" />
            <Button Content="Listar Series" Click="ListarSeriesButton_Click" />
            <Button Content="Alquilar Película" Click="AlquilarPeliculaButton_Click" />
            <Button Content="Alquilar Serie" Click="AlquilarSerieButton_Click" />
            <Button Content="Devolver Película" Click="DevolverPeliculaButton_Click" />
            <Button Content="Devolver Serie" Click="DevolverSerieButton_Click" />
            <Button Content="Agregar Película" Click="AgregarPeliculaButton_Click" />
            <Button Content="Agregar Serie" Click="AgregarSerieButton_Click" />
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
