<Window x:Class="VideoClubWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Club" Height="450" Width="800">
    <DockPanel>
        <!-- Menú principal -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Opciones">
                <MenuItem Header="Agregar Película" Click="AgregarPelicula_Click"/>
                <MenuItem Header="Listar Películas" Click="ListarPeliculas_Click"/>
                <MenuItem Header="Agregar Serie" Click="AgregarSerie_Click"/>
                <MenuItem Header="Listar Series" Click="ListarSeries_Click"/>
            </MenuItem>
        </Menu>

        <!-- Frame donde se mostrarán las diferentes páginas -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
