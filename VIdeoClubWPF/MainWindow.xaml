<Window x:Class="VideoClubWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VideoClub - Menú Principal" Height="350" Width="400">
    <Grid>
        <DockPanel>
            <!-- Panel de botones en la izquierda -->
            <StackPanel DockPanel.Dock="Left" Width="150" Background="LightGray" Margin="10">
                <Button Content="Listar Películas" Width="120" Click="ListarPeliculas_Click"/>
                <Button Content="Listar Series" Width="120" Click="ListarSeries_Click"/>
                <Button Content="Alquilar Película" Width="120" Click="AlquilarPelicula_Click"/>
                <Button Content="Alquilar Serie" Width="120" Click="AlquilarSerie_Click"/>
                <Button Content="Devolver Película" Width="120" Click="DevolverPelicula_Click"/>
                <Button Content="Devolver Serie" Width="120" Click="DevolverSerie_Click"/>
                <Button Content="Agregar Película" Width="120" Click="AgregarPelicula_Click"/>
                <Button Content="Agregar Serie" Width="120" Click="AgregarSerie_Click"/>
            </StackPanel>

            <!-- Panel principal donde se cargan las páginas -->
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
        </DockPanel>
    </Grid>
</Window>
