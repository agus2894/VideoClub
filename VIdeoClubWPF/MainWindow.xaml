<Window x:Class="VideoClubApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Club" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="122*"/>
            <ColumnDefinition Width="679*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Button Click="ListarPeliculasButton_Click" Height="74">Listar Películas</Button>
            <Button Click="ListarSeriesButton_Click" Height="87">Listar Series</Button>
            <Button Content="Agregar Película" Click="AgregarPeliculaButton_Click" Height="87"/>
            <Button Click="AgregarSerieButton_Click" Height="104">Agregar Serie</Button>
            <Frame x:Name="MainFrame" />
        </StackPanel>
    </Grid>
</Window>
